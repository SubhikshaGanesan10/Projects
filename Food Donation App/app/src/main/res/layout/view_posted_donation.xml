<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eba937"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/donorNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/indie_flower_font_family"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donorAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/indie_flower_font_family"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/indie_flower_font_family"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/indie_flower_font_family"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/viewPostedDonationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/indie_flower_font_family"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:text="Delete Donation"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
